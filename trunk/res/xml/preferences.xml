<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" 
    android:title="@string/preferences_main" >
    <PreferenceScreen 
        android:title="@string/preferences_catagory_dominion_set">
        <CheckBoxPreference
            android:key="preferences_use_dominion_base"
            android:title="@string/CardSet.Dominion"
            android:defaultValue="true"
            android:summaryOn="@string/preferences_dominion_set_use_dominion_on"
            android:summaryOff="@string/preferences_dominion_set_use_dominion_off"
            />
        <CheckBoxPreference 
            android:key="preferences_use_intrige"
            android:title="@string/CardSet.Intrigue"
            android:defaultValue="false"
            android:summaryOn="@string/preferences_dominion_set_use_intrigue_on"
            android:summaryOff="@string/preferences_dominion_set_use_intrigue_off"
            />
        <CheckBoxPreference 
            android:key="preferences_use_seaside"
            android:title="@string/CardSet.Seaside"
            android:defaultValue="false"
            android:summaryOn="@string/preferences_dominion_set_use_seaside_on"
            android:summaryOff="@string/preferences_dominion_set_use_seaside_off"
            />
        <CheckBoxPreference 
            android:key="preferences_use_alchemy"
            android:title="@string/CardSet.Alchemy"
            android:defaultValue="false"
            android:summaryOn="@string/preferences_dominion_set_use_alchemy_on"
            android:summaryOff="@string/preferences_dominion_set_use_alchemy_off"
            />
        <CheckBoxPreference 
            android:key="preferences_use_prosperity"
            android:title="@string/CardSet.Prosperity"
            android:defaultValue="false"
            android:summaryOn="@string/preferences_dominion_set_use_prosperity_on"
            android:summaryOff="@string/preferences_dominion_set_use_prosperity_off"
            />
        <CheckBoxPreference 
            android:key="preferences_use_cornucopia"
            android:title="@string/CardSet.Cornucopia"
            android:defaultValue="false"
            android:summaryOn="@string/preferences_dominion_set_use_cornucopia_on"
            android:summaryOff="@string/preferences_dominion_set_use_cornucopia_off"
            />
        <CheckBoxPreference 
            android:key="preferences_use_hinterlands"
            android:title="@string/CardSet.Hinterlands"
            android:defaultValue="false"
            android:summaryOn="@string/preferences_dominion_set_use_hinterlands_on"
            android:summaryOff="@string/preferences_dominion_set_use_hinterlands_off"
