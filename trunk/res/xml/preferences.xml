            android:key="preferences_use_dark_ages"
            android:title="@string/CardSet.DarkAges"
            android:defaultValue="false"
            android:summaryOn="@string/preferences_dominion_set_use_dark_ages_on"
            android:summaryOff="@string/preferences_dominion_set_use_dark_ages_off"
            />
        <CheckBoxPreference 
            android:key="preferences_use_guilds"
            android:title="@string/CardSet.Guilds"
            android:defaultValue="false"
            android:summaryOn="@string/preferences_dominion_set_use_guilds_on"
            android:summaryOff="@string/preferences_dominion_set_use_guilds_off"
            />
        <CheckBoxPreference 
            android:key="preferences_use_promos"
            android:title="@string/CardSet.PromoCards"
            android:defaultValue="false"
            android:summaryOn="@string/preferences_dominion_set_use_promos_on"
            android:summaryOff="@string/preferences_dominion_set_use_promos_off"
            />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/preferences_category_randomizer">
        <PreferenceScreen android:title="@string/preferences_randomizer_category_ranges">
            <com.xilconic.dominiontoolkit.Activities.Preferences.IntegerRangePreference
	            android:key="preferences_range_dominion_base"
	            android:title="@string/CardSet.Dominion"
            />
            <com.xilconic.dominiontoolkit.Activities.Preferences.IntegerRangePreference
	            android:key="preferences_range_intrigue"
	            android:title="@string/CardSet.Intrigue"
