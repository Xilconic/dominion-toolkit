	            android:key="preferences_range_seaside"
	            android:title="@string/CardSet.Seaside"
            />
            <com.xilconic.dominiontoolkit.Activities.Preferences.IntegerRangePreference
	            android:key="preferences_range_alchemy"
	            android:title="@string/CardSet.Alchemy"
            />
            <com.xilconic.dominiontoolkit.Activities.Preferences.IntegerRangePreference
	            android:key="preferences_range_prosperity"
	            android:title="@string/CardSet.Prosperity"
            />
            <com.xilconic.dominiontoolkit.Activities.Preferences.IntegerRangePreference
	            android:key="preferences_range_cornucopia"
	            android:title="@string/CardSet.Cornucopia"
